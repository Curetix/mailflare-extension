{
  "name": "mailflare-extension",
  "displayName": "MailFlare - Email Alias Extension",
  "version": "1.1.0",
  "description": "Create email aliases for your own domains using Cloudflare Email Routing.",
  "author": "Curetix <me@curetix.eu>",
  "keywords": [
    "browser-extension",
    "webext",
    "browser-addons",
    "browser-plugins",
    "chrome",
    "firefox",
    "email"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/curetix/mailflare-extension.git"
  },
  "scripts": {
    "prepare": "husky install && plasmo build",
    "dev": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:web": "run-p dev:vite dev:functions",
    "dev:vite": "vite --port 4000",
    "dev:functions": "wrangler pages dev --port 4001 dist/",
    "build": "tsc && plasmo build --zip",
    "build:all": "tsc && run-s build:edge build:chrome build:firefox",
    "build:edge": "plasmo build --zip --target=edge-mv3",
    "build:chrome": "plasmo build --zip --target=chrome-mv3",
    "build:firefox": "plasmo build --zip --target=firefox-mv2",
    "build:vite": "tsc && vite build",
    "prettier": "prettier -w *.json postcss.config.js vite.config.ts functions/ src/"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mantine/core": "^7.2.2",
    "@mantine/form": "^7.2.2",
    "@mantine/hooks": "^7.2.2",
    "@mantine/notifications": "^7.2.2",
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "^1.9.0",
    "@tabler/icons-react": "^2.40.0",
    "@tanstack/query-core": "^5.8.3",
    "@tanstack/react-query": "^5.8.4",
    "@tanstack/react-query-devtools": "^5.8.4",
    "@tanstack/react-query-persist-client": "^5.8.4",
    "jotai": "^2.5.1",
    "jotai-devtools": "^0.7.0",
    "jotai-tanstack-query": "^0.7.2",
    "plasmo": "^0.84.0",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.11.0",
    "postcss-simple-vars": "^7.0.1",
    "psl": "^1.9.0",
    "random-words": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@plasmohq/rps": "^1.8.7",
    "@types/chrome": "^0.0.251",
    "@types/node": "^20.9.0",
    "@types/psl": "^1.1.3",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/webextension-polyfill": "^0.10.6",
    "@vitejs/plugin-react": "^4.2.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.16.7",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^3.15.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "svgo": "2.8.0"
      }
    }
  },
  "manifest": {
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://api.cloudflare.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{f0bdc9fa-a062-4424-baee-16530c53aa06}"
      }
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,html,md}": "prettier --write"
  }
}
