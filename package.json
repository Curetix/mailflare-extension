{
  "name": "cloudflare-email",
  "displayName": "MailFlare - Email Alias Extension",
  "version": "1.0.0",
  "description": "Create email aliases for your own domains using Cloudflare Email Routing.",
  "author": "Curetix",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build --zip",
    "build:firefox": "plasmo build --target=firefox-mv2 --zip",
    "prettier": "prettier -w ./src/"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@mantine/core": "^5.10.3",
    "@mantine/form": "^5.10.3",
    "@mantine/hooks": "^5.10.3",
    "@mantine/notifications": "^5.10.3",
    "@plasmohq/storage": "^1.0.5",
    "@tabler/icons-react": "^2.4.0",
    "@tanstack/react-query": "^4.24.6",
    "@tanstack/react-query-devtools": "^4.24.6",
    "parse-domain": "^7.0.1",
    "plasmo": "0.65.0",
    "random-words": "^1.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "wretch": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@cloudflare/workers-types": "^4.20230115.0",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/chrome": "0.0.213",
    "@types/node": "18.13.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.10",
    "prettier": "2.8.4",
    "typescript": "4.9.5",
    "vitest": "^0.28.5"
  },
  "manifest": {
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "mailflare@curetix.eu"
      }
    }
  }
}
