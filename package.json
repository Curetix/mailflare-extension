{
  "name": "cloudflare-email",
  "displayName": "MailFlare - Email Alias Extension",
  "version": "1.0.0",
  "description": "Create email aliases for your own domains using Cloudflare Email Routing.",
  "author": "Curetix",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "plasmo dev",
    "dev:firefox": "yarn dev --target=firefox-mv2",
    "build": "tsc && plasmo build --zip",
    "build:firefox": "yarn build --target=firefox-mv2",
    "prettier": "prettier -w ./src/"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@mantine/core": "^6.0.4",
    "@mantine/form": "^6.0.4",
    "@mantine/hooks": "^6.0.4",
    "@mantine/notifications": "^6.0.4",
    "@plasmohq/storage": "^1.3.1",
    "@tabler/icons-react": "^2.11.0",
    "@tanstack/query-core": "^4.27.0",
    "@tanstack/react-query": "^4.28.0",
    "@tanstack/react-query-devtools": "^4.28.0",
    "@tanstack/react-query-persist-client": "^4.28.0",
    "jotai": "^2.0.3",
    "jotai-tanstack-query": "^0.6.0",
    "parse-domain": "^7.0.1",
    "plasmo": "^0.67.4",
    "random-words": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@cloudflare/workers-types": "^4.20230321.0",
    "@plasmohq/prettier-plugin-sort-imports": "^3.6.3",
    "@types/chrome": "^0.0.224",
    "@types/node": "^18.15.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/webextension-polyfill": "^0.10.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.6",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.7",
    "wrangler": "^2.13.0"
  },
  "manifest": {
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://api.cloudflare.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "mailflare@curetix.eu"
      }
    }
  }
}
