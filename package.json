{
  "name": "mailflare-extension",
  "displayName": "MailFlare - Email Alias Extension",
  "version": "1.0.3",
  "description": "Create email aliases for your own domains using Cloudflare Email Routing.",
  "author": "Curetix <me@curetix.eu>",
  "keywords": [
    "browser-extension",
    "webext",
    "browser-addons",
    "browser-plugins",
    "chrome",
    "firefox",
    "email"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/curetix/mailflare-extension.git"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:web": "run-p dev:vite dev:functions",
    "dev:vite": "vite --port 4000",
    "dev:functions": "wrangler pages dev --port 4001 dist/",
    "build": "tsc && plasmo build --zip",
    "build:all": "tsc && run-s build:edge build:chrome build:firefox",
    "build:edge": "plasmo build --zip --target=edge-mv3",
    "build:chrome": "plasmo build --zip --target=chrome-mv3",
    "build:firefox": "plasmo build --zip --target=firefox-mv2",
    "build:vite": "tsc && vite build",
    "prettier": "prettier -w *.json vite.config.ts functions/ shared/ src/ worker/"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mantine/core": "^6.0.20",
    "@mantine/form": "^6.0.20",
    "@mantine/hooks": "^6.0.20",
    "@mantine/notifications": "^6.0.20",
    "@plasmohq/storage": "^1.8.0",
    "@tabler/icons-react": "^2.34.0",
    "@tanstack/query-core": "^4.35.3",
    "@tanstack/react-query": "^4.35.3",
    "@tanstack/react-query-devtools": "^4.35.3",
    "@tanstack/react-query-persist-client": "^4.35.3",
    "jotai": "^2.4.2",
    "jotai-tanstack-query": "^0.7.2",
    "parse-domain": "^7.0.1",
    "plasmo": "^0.83.0",
    "random-words": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230914.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@plasmohq/rps": "^1.8.7",
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.6.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/webextension-polyfill": "^0.10.2",
    "@vitejs/plugin-react": "^4.0.4",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.16.5",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^3.8.0"
  },
  "manifest": {
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://api.cloudflare.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{f0bdc9fa-a062-4424-baee-16530c53aa06}"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,html,md}": "prettier --write"
  }
}
