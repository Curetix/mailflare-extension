{
  "name": "mailflare-extension",
  "displayName": "MailFlare - Email Alias Extension",
  "version": "1.0.1",
  "description": "Create email aliases for your own domains using Cloudflare Email Routing.",
  "author": "Curetix",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:web": "run-p dev:vite dev:functions",
    "dev:vite": "vite --port 3000",
    "dev:functions": "wrangler pages dev --port 3001 dist/",
    "build": "tsc && plasmo build --zip",
    "build:firefox": "yarn build --target=firefox-mv2",
    "build:vite": "tsc && vite build",
    "prettier": "prettier -w *.json vite.config.ts functions/ src/ worker_src/"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@mantine/core": "^6.0.11",
    "@mantine/form": "^6.0.11",
    "@mantine/hooks": "^6.0.11",
    "@mantine/notifications": "^6.0.11",
    "@plasmohq/storage": "^1.6.0",
    "@tabler/icons-react": "^2.20.0",
    "@tanstack/query-core": "^4.29.7",
    "@tanstack/react-query": "^4.29.7",
    "@tanstack/react-query-devtools": "^4.29.7",
    "@tanstack/react-query-persist-client": "^4.29.7",
    "jotai": "^2.1.0",
    "jotai-tanstack-query": "^0.7.0",
    "parse-domain": "^7.0.1",
    "plasmo": "^0.73.1",
    "random-words": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@cloudflare/workers-types": "^4.20230518.0",
    "@plasmohq/prettier-plugin-sort-imports": "^3.6.4",
    "@plasmohq/rps": "^1.8.5",
    "@types/chrome": "^0.0.236",
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-react": "^4.0.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vite-plugin-pwa": "^0.15.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1",
    "wrangler": "^3.0.1"
  },
  "manifest": {
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://api.cloudflare.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{f0bdc9fa-a062-4424-baee-16530c53aa06}"
      }
    }
  }
}
